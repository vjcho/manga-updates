{
  "manifest_version": 2,

  "name": "Manga Updates",
  "description": "This extension notifies you when new manga chapters come out.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "manga.html",
    "default_title": "Manga Updates"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": {
    "js":["lib", "manga.js"]
  }
}